{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Application",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "run.py"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "pip",
                "install",
                "-r",
                "requirements.txt"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "tests/run_tests.py"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            }
        },
        {
            "label": "Run Linter (Ruff)",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "ruff",
                "check",
                "src/",
                "tests/",
                "--fix"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Format Code (Ruff)",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "-m",
                "ruff",
                "format",
                "src/",
                "tests/"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Train Models",
            "type": "shell",
            "command": "${config:python.defaultInterpreterPath}",
            "args": [
                "train.py",
                "--epochs",
                "30",
                "--validation-split",
                "0.2"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "Setup Development Environment",
            "type": "shell",
            "command": "make",
            "args": [
                "setup-dev"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "Clean Project",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "problemMatcher": [],
            "presentation": {
                "reveal": "always"
            }
        }
    ]
}
